{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "baseUrl": "."
    },
    "compileOnSave": true,
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib"]
}
